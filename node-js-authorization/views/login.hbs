<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Sign in</a></li>
        <li class="tab col s6"><a href="#register">Sign up</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3 auth-tab">
      {{#if loginError}}
        <p class="alert">{{loginError}}</p>
      {{/if}}
      <h3>Sign in</h3>
      <form action="/auth/login" method="POST">
        <div class="input-field">
          <input id="email" name="email" type="text" class="validate" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="Add email"></span>
        </div>
        <div class="input-field">
          <input id="password" name="password" type="password" class="validate" required>
          <label for="password">Password</label>
          <span class="helper-text" data-error="Add password"></span>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn btn-primary auth-form-btn" type="submit">
          Sign in
        </button>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3 auth-tab">
      {{#if registerError}}
        <p class="alert">{{registerError}}</p>
      {{/if}}
      <h3>Sign up</h3>
      <form action="/auth/register" method="POST">
        <div class="input-field">
          <input id="name" name="name" type="text" class="validate" required>
          <label for="name">Name</label>
          <span class="helper-text" data-error="Add name"></span>
        </div>
        <div class="input-field">
          <input id="remail" name="email" type="text" class="validate" required>
          <label for="remail">Email</label>
          <span class="helper-text" data-error="Add email"></span>
        </div>
        <div class="input-field">
          <input id="rpassword" name="password" type="password" class="validate" required>
          <label for="rpassword">Password</label>
          <span class="helper-text" data-error="Add password"></span>
        </div>
        <div class="input-field">
          <input id="confirm" name="confirm" type="password" class="validate" required>
          <label for="confirm">Confirm password</label>
          <span class="helper-text" data-error="Repeat password"></span>
        </div>   
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn btn-primary auth-form-btn" type="submit">
          Sign up
        </button>
      </form>
    </div>
  </div>
  </div>
      
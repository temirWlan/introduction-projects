<h1>Edit {{course-title}}</h1>

<form action="/courses/edit" method="POST">
	<div class="input-field">
    <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Add course name"></span>
  </div>
  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" value="{{course.price}}" required>
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Add course price"></span>
  </div>
  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" value="{{course.img}}" required>
    <label for="img">Preview URL</label>
    <span class="helper-text" data-error="Add course preview url"></span>
  </div>
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <input type="hidden" name="id" value="{{course.id}}" />
  <button class="btn btn-primary" type="submit">
  	Edit
  </button>
</form>
<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{course.id}}" />
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button class="btn red red-remove-btn" type="submit">
    Remove
  </button>
</form>
<h1>Add course</h1>

{{#if error}}
  <p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST" novalidate>
	<div class="input-field">
    <input id="title" name="title" type="text" class="validate" required value={{data.title}}>
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Add course name"></span>
  </div>
  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required value={{data.price}}>
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Add course price"></span>
  </div>
  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required value={{data.img}}>
    <label for="img">Preview URL</label>
    <span class="helper-text" data-error="Add course preview url"></span>
  </div>
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button class="btn btn-primary" type="submit">
  	Add
  </button>
</form>